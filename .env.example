# Docker Compose environment for orchestration/docker-compose.dev.yml
# Copy to .env in the repo root.

# Core services
POSTGRES_DB=lifelog
POSTGRES_USER=lifelog
POSTGRES_PASSWORD=lifelog

# RustFS (S3-compatible storage for local dev)
RUSTFS_IMAGE=rustfs/rustfs:latest
S3_ACCESS_KEY_ID=rustfs
S3_SECRET_ACCESS_KEY=rustfs123

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Authentik (local OIDC provider)
AUTHENTIK_SECRET_KEY=replace-with-32+char-random-string
# Authentik does not publish a "latest" tag; set a concrete version from GHCR.
# The server image is used for both server and worker commands.
AUTHENTIK_IMAGE_TAG=2024.XX.Y
AUTHENTIK_POSTGRES_DB=authentik
AUTHENTIK_POSTGRES_USER=authentik
AUTHENTIK_POSTGRES_PASSWORD=authentik
# Optional: auto-create the admin user on first boot.
# AUTHENTIK_BOOTSTRAP_EMAIL=admin@example.com
# AUTHENTIK_BOOTSTRAP_PASSWORD=change-me
